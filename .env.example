# SQL Insight Engine - Environment Configuration
# Copy this file to .env and update the values

# ====================
# DATABASE CONFIGURATION
# ====================

# For Docker Compose: use container name 'metadata_store'
# For Local Development: use 'localhost'
DATABASE_URL=postgresql://admin:password@metadata_store:5432/insight_engine

# Metadata Database (Application DB)
METADATA_DB_USER=admin
METADATA_DB_PASSWORD=password
METADATA_DB_NAME=insight_engine

# External Test Database
TEST_DB_USER=admin
TEST_DB_PASSWORD=password
TEST_DB_NAME=external_test_db

# ====================
# CHROMADB CONFIGURATION
# ====================

# For Docker: use 'chromadb'
# For Local: use 'localhost'
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_USE_CLOUD=false

# Optional: For ChromaDB Cloud
# CHROMA_USE_CLOUD=true
# CHROMA_CLOUD_API_KEY=your_api_key
# CHROMA_CLOUD_TENANT=your_tenant
# CHROMA_CLOUD_DATABASE=your_database

# ====================
# RABBITMQ CONFIGURATION
# ====================

# For Docker: use 'rabbitmq'
# For Local: use 'localhost'
RABBITMQ_HOST=rabbitmq
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ====================
# MINIO CONFIGURATION  
# ====================

# For Docker: use 'minio:9000'
# For Local: use 'localhost:9000'
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=documents
MINIO_HOST=minio

# ====================
# GEMINI AI CONFIGURATION
# ====================

GEMINI_API_KEY=your_gemini_api_key_here

# ====================
# NOTES FOR LOCAL DEVELOPMENT
# ====================

# If running locally (not in Docker), change these values:
# DATABASE_URL=postgresql://admin:password@localhost:5432/insight_engine
# CHROMA_HOST=localhost
# RABBITMQ_HOST=localhost
# MINIO_ENDPOINT=localhost:9000
